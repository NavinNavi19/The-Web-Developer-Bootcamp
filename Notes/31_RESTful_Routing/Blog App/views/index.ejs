<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blogs){ %>
            <div class="item">
                <img class="ui medium image" src="<%= blogs.image %>">
                <div class="content">
                    <a class="header" href="/blogs/<%= blogs._id %>"><%= blogs.title %></a>
                    <div class="meta">
                        <span>Published on <%= blogs.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blogs.body.substring(0, 100)%>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= blogs._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }); %>    
        </div>
    </div>
</div>

<% include partials/footer %>