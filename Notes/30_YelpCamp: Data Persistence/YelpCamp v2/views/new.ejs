<% include partials/header %>

<div class="container">
    
    <h1 class="text-center mt-5">Create a New Campground</h1>

    <div class="row">
        
        <div style="width: 30%;margin: 25px auto;">
            
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="exampleCampgroundName1"><strong>Campground Name</strong></label>
                    <input type="text" class="form-control" id="exampleCampgroundName1" name="name" placeholder="Enter Campground Name">
                </div>
                <div class="form-group">
                    <label for="campgroundImage"><strong>Campground Image</strong></label>
                    <input type="text" class="form-control" id="campgroundImage" name="image" placeholder="Enter Campground Image URL">
                </div>
                <div class="form-group">
                    <label for="campgroundDescription"><strong>Campground Description</strong></label>
                    <input type="text" class="form-control" id="campgroundDescription" name="description" placeholder="Enter Campground Description">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
    <div class="text-center">
        <a href="/campgrounds" >Go Back</a>
    </div>
    
</div>



<% include partials/footer %>