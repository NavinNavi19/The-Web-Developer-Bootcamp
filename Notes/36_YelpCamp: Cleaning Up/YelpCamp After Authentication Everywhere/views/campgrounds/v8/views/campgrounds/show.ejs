<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div>
                <ul class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <figure class=" figure img-thumbnail">
                <img class="figure-img img-fluid rounded" src="<%= campground.image %>">
                <figcaption>
                    <span class="figure-caption text-left"><a href=""><%= campground.name %></a></span>
                    <spam class="figure-caption float-right"><strong>$9.00/night</strong></span>
                </figcaption>
                <p><%= campground.description %></p>
            </figure>
            <div class="card bg-light">
                <div class="card-body">
                    <p class="text-right">
                        <a class="btn btn-danger" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comments</a>
                    </p>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class=float-right>10 days ago</span>
                            <p>
                                "<%= comment.text %>"
                            </p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>