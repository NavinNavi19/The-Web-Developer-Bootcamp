<% include partials/header %>

<div class="container">
    
    <h1 class="text-center mt-5">Create a New Campground</h1>

    <div class="row">
        
        <div style="width: 30%;margin: 25px auto;">
            
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="exampleCampgroundName1">Campground Name</label>
                    <input type="text" class="form-control" id="exampleCampgroundName1" name="name" placeholder="Enter Campground Name">
                </div>
                <div class="form-group">
                    <label for="campgroundImage">Campground Image</label>
                    <input type="text" class="form-control" id="campgroundImage" placeholder="Enter Campground Image">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
    <div class="text-center">
        <a href="/campgrounds" >Go Back</a>
    </div>
    
</div>



