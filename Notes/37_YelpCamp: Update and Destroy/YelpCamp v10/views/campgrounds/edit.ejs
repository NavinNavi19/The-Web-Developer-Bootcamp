<% include ../partials/header %>

<div class="container">
    
    <h1 class="text-center mt-5">Edit <%= campground.name %></h1>

    <div class="row">
        
        <div style="width: 30%;margin: 25px auto;">
            
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="exampleCampgroundName1"><strong>Campground Name</strong></label>
                    <input type="text" class="form-control" id="exampleCampgroundName1" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="campgroundImage"><strong>Campground Image</strong></label>
                    <input type="text" class="form-control" id="campgroundImage" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="campgroundDescription"><strong>Campground Description</strong></label>
                    <input type="text" class="form-control" id="campgroundDescription" name="campground[description]" value="<%= campground.description %>">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
    <div class="text-center">
        <a href="/campgrounds" >Go Back</a>
    </div>
    
</div>



<% include ../partials/footer %>